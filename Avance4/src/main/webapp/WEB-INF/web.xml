<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CrearCuenta</servlet-name>
        <servlet-class>com.servlets.CrearCuenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>com.servlets.IniciarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>com.servlets.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CargarPublicacion</servlet-name>
        <servlet-class>com.servlets.CargarPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crearPublicacion</servlet-name>
        <servlet-class>com.servlets.crearPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarPublicacion</servlet-name>
        <servlet-class>com.servlets.EliminarPublicacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrearCuenta</servlet-name>
        <url-pattern>/CrearCuenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargarPublicacion</servlet-name>
        <url-pattern>/CargarPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crearPublicacion</servlet-name>
        <url-pattern>/crearPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarPublicacion</servlet-name>
        <url-pattern>/EliminarPublicacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
